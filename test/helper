# Clear any incoming prototype variables/functions and blank config dirs
unset $(env | sed -n -e '
  /^PROTOTYPE_/s/=.*//p
  /^prototype_/s/=.*//p
')

# Setup test paths
export PATH="$PWD/vendor/ts/bin:$PATH:$PWD/bin"

# For sorting
export LC_ALL=C

# Helpers for testing env inheritance
assert_a_env () {
ext=${1:-}
grep PROTOTYPE_TEST | tr -d "'" | assert_output "\
PROTOTYPE_TEST_A=a$ext
PROTOTYPE_TEST_A_B=a$ext
PROTOTYPE_TEST_A_B_C=a$ext
PROTOTYPE_TEST_A_B_C_ENV=a$ext
PROTOTYPE_TEST_A_B_ENV=a$ext
PROTOTYPE_TEST_A_ENV=a.env
"
}

assert_a_b_env () {
ext=${1:-}
grep PROTOTYPE_TEST | tr -d "'" | assert_output "\
PROTOTYPE_TEST_A=a$ext
PROTOTYPE_TEST_A_B=a_b$ext
PROTOTYPE_TEST_A_B_C=a_b$ext
PROTOTYPE_TEST_A_B_C_ENV=a_b$ext
PROTOTYPE_TEST_A_B_ENV=a_b.env
PROTOTYPE_TEST_A_ENV=a.env
"
}

assert_a_b_c_env () {
ext=${1:-}
grep PROTOTYPE_TEST | tr -d "'" | assert_output "\
PROTOTYPE_TEST_A=a$ext
PROTOTYPE_TEST_A_B=a_b$ext
PROTOTYPE_TEST_A_B_C=a_b_c$ext
PROTOTYPE_TEST_A_B_C_ENV=a_b_c.env
PROTOTYPE_TEST_A_B_ENV=a_b.env
PROTOTYPE_TEST_A_ENV=a.env
"
}
